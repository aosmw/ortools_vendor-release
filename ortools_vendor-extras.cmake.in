# add the local Modules directory to the modules path
if(WIN32)
  set(ortools_DIR "${@PROJECT_NAME@_DIR}/../../../opt/ortools_vendor/CMake")
else()
  set(ortools_DIR "${@PROJECT_NAME@_DIR}/../../../opt/ortools_vendor/share/cmake/ortools")
endif()
message(STATUS "Setting ortools_DIR to: '${ortools_DIR}'")

find_package(ortools REQUIRED)

set(ortools_vendor_LIBRARIES ${ORTOOLS_LIBRARIES})
set(ortools_vendor_INCLUDE_DIRS ${ORTOOLS_INCLUDE_DIR})

if(TARGET ortools::ortools)
  list(APPEND ortools_vendor_TARGETS ortools::ortools)
else()
  list(APPEND ortools_vendor_TARGETS ortools)
endif()
